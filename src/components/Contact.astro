---
import { getTranslation } from "../utils/ui";
---

<section id="contact" class="call_to_action_area">
  <div class="container">
    <div
      class="call_to_action_wrapper wow fadeIn"
      data-wow-duration="1.3s"
      data-wow-delay="0.5s"
    >
      <div class="row">
        <div class="col-lg-12">
          <div
            class="call_to_action_box d-md-flex justify-content-between align-items-center"
          >
            <div class="call_to_action_content">
              <h3
                data-i18n={getTranslation("contact.action_title")}
                class="action_title"
              >
              </h3>
              <ul class="line">
                <li></li>
                <li></li>
                <li></li>
              </ul>
              <p data-i18n={getTranslation("contact.description_title")}></p>
            </div>
            <!-- call to action content -->

            <div class="call_to_action_btn">
              <a
                href="https://rebrand.ly/freelancer-ud"
                rel="nofollow"
                data-i18n={getTranslation("contact.hire_me_btn")}
                class="main-btn"></a>
            </div>
            <!-- call to action btn -->
          </div>
          <!-- call to action box -->
        </div>
      </div>
      <!-- row -->
    </div>
    <!-- call to action wrapper -->
  </div>
  <!-- container -->
</section>
