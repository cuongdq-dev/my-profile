---
import { getTranslation } from "../utils/ui";

const email = import.meta.env.EMAIL;
const facebookUrl = import.meta.env.FACEBOOK_URL;
const githubUrl = import.meta.env.GITHUB_URL;
const phoneNumber = import.meta.env.PHONE_NUMBER;
---

<footer id="footer" class="footer_area gray-bg pt-115 pb-120">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="footer_content text-center">
          <ul class="footer_social">
            {
              facebookUrl && (
                <li>
                  <a target="_blank" href={facebookUrl}>
                    <i class="lni lni-facebook-filled" />
                  </a>
                </li>
              )
            }
            {
              githubUrl && (
                <li>
                  <a target="_blank" href={githubUrl}>
                    <i class="lni lni-github" />
                  </a>
                </li>
              )
            }
            {
              phoneNumber && (
                <li>
                  <a href={`tel://${phoneNumber}`}>
                    <i class="lni lni-phone" />
                  </a>
                </li>
              )
            }
          </ul>
          {email && <span class="email">{email}</span>}

          <p class="credit pt-45">
            <span data-i18n={getTranslation("footer.credit")}></span>
            <a href="https://github.com/cuongdq-dev/" rel="nofollow"
              >{import.meta.env.AUTHOR_NAME}</a
            >
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>
