---
import { getTranslation } from "../utils/ui";
import Email from "./icons/Email.astro";
import Facebook from "./icons/Facebook.astro";
import Github from "./icons/Github.astro";
import Phone from "./icons/Phone.astro";

const githubUrl = import.meta.env.GIT_URL;
---

<footer id="footer" class="footer_area gray-bg pt-115 pb-120">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="footer_content text-center">
          <ul class="footer_social">
            <Facebook />
            <Github />
            <Phone />
            <Email />
          </ul>
          <!-- {email && <span class="email">{email}</span>} -->

          <p class="credit pt-45">
            <span data-i18n={getTranslation("footer.credit")}></span>
            <a href={githubUrl} rel="nofollow">{import.meta.env.AUTHOR_NAME}</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>
