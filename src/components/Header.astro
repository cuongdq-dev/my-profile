<script>
  import { defaultLang } from "../utils/ui";
  document.addEventListener("DOMContentLoaded", function () {
    const langSelectIds = ["langSelect", "langSelectMobile"];
    const savedLang = localStorage.getItem("lang") || defaultLang;

    langSelectIds.forEach((id) => {
      const selectEl = document.getElementById(id) as HTMLSelectElement | null;
      if (selectEl) {
        selectEl.value = savedLang;

        selectEl.addEventListener("change", function () {
          const selectedLang = selectEl.value;
          localStorage.setItem("lang", selectedLang);
          window.dispatchEvent(new Event("languageChange"));
          window.dispatchEvent(new Event("storage"));
        });
      }
    });
  });
</script>
