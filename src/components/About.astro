<section id="about" class="about_area pt-70 pb-120">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-lg-6 col-md-9">
        <div
          class="about_image mt-50 wow fadeInRightBig"
          data-wow-duration="1.3s"
          data-wow-delay="0.5s"
        >
          <img src="assets/images/about_hero.png" alt="Hero" />
          <div class="about_shape"></div>
        </div>
        <!-- about image -->
      </div>
      <div class="col-lg-6">
        <div
          class="about_content mt-45 wow fadeInLeftBig"
          data-wow-duration="1.3s"
          data-wow-delay="0.5s"
        >
          <div class="section_title">
            <h5 class="sub_title">About</h5>
            <h3 class="main_title">Why You Hire Me?</h3>
            <ul class="line">
              <li></li>
              <li></li>
              <li></li>
            </ul>
          </div>
          <!-- section title -->
          <p>
            I'm a full-stack developer specializing in building scalable web
            applications using modern technologies. With expertise in
            JavaScript, React.js, TypeScript, Node.js, and NestJS, I can deliver
            high-quality solutions tailored to your business needs. I'm
            passionate about clean code, efficient architectures, and
            user-friendly interfaces.
          </p>

          <div class="about_skills pt-15">
            <!-- skill item -->
            <div class="skill_item mt-20">
              <div class="skill_header">
                <h6 class="skill_title">TypeScript / JavaScript</h6>
                <div class="skill_percentage">
                  <p><span class="counter">90</span>%</p>
                </div>
              </div>
              <div class="skill_bar">
                <div class="bar_inner">
                  <div class="bar progress_line" data-width="90"></div>
                </div>
              </div>
            </div>
            <!-- skill item -->

            <div class="skill_item mt-20">
              <div class="skill_header">
                <h6 class="skill_title">React.js / Next.js</h6>
                <div class="skill_percentage">
                  <p><span class="counter">80</span>%</p>
                </div>
              </div>
              <div class="skill_bar">
                <div class="bar_inner">
                  <div class="bar progress_line" data-width="80"></div>
                </div>
              </div>
            </div>

            <!-- skill item -->
            <div class="skill_item mt-20">
              <div class="skill_header">
                <h6 class="skill_title">Node.js / NestJS</h6>
                <div class="skill_percentage">
                  <p><span class="counter">70</span>%</p>
                </div>
              </div>
              <div class="skill_bar">
                <div class="bar_inner">
                  <div class="bar progress_line" data-width="70"></div>
                </div>
              </div>
            </div>

            <!-- skill item -->
            <div class="skill_item mt-20">
              <div class="skill_header">
                <h6 class="skill_title">Database (PostgreSQL, MongoDB)</h6>
                <div class="skill_percentage">
                  <p><span class="counter">85</span>%</p>
                </div>
              </div>
              <div class="skill_bar">
                <div class="bar_inner">
                  <div class="bar progress_line" data-width="85"></div>
                </div>
              </div>
            </div>
            <!-- skill item -->
            <div class="skill_item mt-20">
              <div class="skill_header">
                <h6 class="skill_title">Docker & CI/CD</h6>
                <div class="skill_percentage">
                  <p><span class="counter">70</span>%</p>
                </div>
              </div>
              <div class="skill_bar">
                <div class="bar_inner">
                  <div class="bar progress_line" data-width="70"></div>
                </div>
              </div>
            </div>
            <!-- skill item -->
          </div>
          <!-- about skill -->
        </div>
        <!-- about content -->
      </div>
    </div>
    <!-- row -->
  </div>
  <!-- container -->
</section>
